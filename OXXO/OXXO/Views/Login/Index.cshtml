@model OXXO.Models.Login
@{
    ViewData["Title"] = "Inicio de sesion";
}
@{

    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        background: #FFD6AA;
        background: -webkit-radial-gradient(top right, #FFD6AA, #756CA6);
        background: -moz-radial-gradient(top right, #FFD6AA, #756CA6);
        background: radial-gradient(to bottom left, #FFD6AA, #756CA6);
    }

    .account-block {
        padding: 0;
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        position: relative;
    }

    .card {
        box-shadow: rgba(0, 0, 0, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px;
        padding: 1.5em .5em .5em;
        border-radius: 2em;
    }

    .account-block .overlay {
        -webkit-box-flex: 1;
        -ms-flex: 1;
        flex: 1;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .account-block .account-testimonial {
        text-align: center;
        color: #fff;
        position: absolute;
        margin: 0 auto;
        padding: 0 1.75rem;
        bottom: 3rem;
        left: 0;
        right: 0;
    }

    .text-theme {
        color: #5369f8 !important;
    }
</style>

<div id="main-wrapper" class="container">
    <div class="row justify-content-center ">
        <div class="col-xl-5">
            <div class="card ">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="mb-5">
                                    <h1 class="h2 font-weight-bold text-theme ">Inicio de sesion</h1>
                                </div>
                                <h6 class="h5 mb-0">Bienvenido!</h6>
                                <p class="text-muted mt-2 mb-5">Ingresa tu direccion de correo y contraseña</p>
                                <form>
                                    <div class="form-group mb-3">
                                        <label for="exampleInputEmail1">Correo</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1">
                                    </div>
                                    <div class="form-group mb-5">
                                        <label for="exampleInputPassword1">Contraseña</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1">
                                    </div>
                                    <div class="row">
                                        <div class="col-3">
                                            <button type="submit" class="btn btn-outline-primary ">Ingresar</button>
                                        </div>
                                        <div class="col-9">
                                            <p class=" text-muted text-center mt-2 mb-0">¿Aun no estas registrado? <a asp-controller="Registro" asp-action="Index" class="text-primary ml-1">Registrarse</a></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}