@model OXXO.Models.Cluster

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<div class="offcanvas-header">
    <h5>Dar de Alta Nuevo Cluster</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form id="FormCrear" asp-action="Crear" class="p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="mb-3">
                <label asp-for="NombreCluster">Nombre del Cluster</label>
                <input asp-for="NombreCluster" class="form-control" autocomplete="off" required /><span asp-validation-for="NombreCluster" class="text-danger"></span>
            </div>
        </div>
        <div class="row p-2">
            <input type="submit" value="Dar de Alta Nuevo Cluster" class="btn btn-success" />
        </div>
    </form>
</div>


<script>
    $('#FormCrear').on('submit', function () {
        if (this.checkValidity() == false) {
            return false;
        }
    });
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}