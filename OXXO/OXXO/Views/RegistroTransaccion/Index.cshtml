@model OXXO.Models.RegistroTransaccion

<div class="container">
    <div id="PlaceHolderHere"></div>
    <style>

        .input-validation-error {
            border-color: red;
        }
    </style>
    @if (ViewBag.Alert != null)
    {
        <div id="alerta" class="container body-content">
            @Html.Raw(@ViewBag.Alert)
        </div>
    }

    <h1 id="titulo">Registro de Transacción</h1>
    <form asp-action="Crear">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <div class="mb-3">
                        <label class="control-label">Referencia</label>
                        <input asp-for="Referencia" name="Referencia" class="form-control" required /> <span asp-validation-for="Referencia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <div class=" mb-3">
                        <label class="control-label">Tienda</label>
                        <input asp-for="Tienda" name="Tienda" class="form-control" required /><span asp-validation-for="Tienda" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <div class=" mb-3">
                        <div class="mb-3">
                            <label class="control-label">Estatus</label>
                            <select asp-for="Estatus" name="Estatus" class="form-select" required>
                                <option value="">Selecciona una opción...</option>
                                <option value="1">Pendiente de Pago</option>
                                <option value="2">Pagada</option>
                                <option value="3">Expirada</option>
                                <option value="4">Cancelada</option>
                            </select>
                            <span asp-validation-for="Estatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <div class="mb-3">
                        <label asp-for="Fecha">Fecha</label>
                        <input asp-for="Fecha" class="form-control" type="date" autocomplete="off" required /><span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">

                    <div class="mb-3">
                        <label asp-for="Hora">Hora</label>
                        <input asp-for="Hora" class="form-control" id="time" type="time" step="3600000" autocomplete="off" required /><span asp-validation-for="Hora" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">

                    <div class="mb-3">
                        <label asp-for="Monto" class="control-label">Monto</label>
                        <input asp-for="Monto" name="Monto" type="number" min="0" step="any" class="form-control" style="text-transform:uppercase" placeholder="$1000.00" required /><span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="float-right">
                <input type="submit" value="Dar de Alta" class="btn btn-success float-end" />
            </div>
        </div>
    </form>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>

</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}