@model OXXO.Models.Comercio
@{
    ViewData["Title"] = "Revision";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 id="titulo">Revisión</h1>
    <hr />
    <div class="container-fluid">
        @if (ViewBag.Alert != null) //Agregado por Miguel
        {
            <div id="alerta" class="container body-content">
                @Html.Raw(@ViewBag.Alert)
            </div>
        }
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xl-12">
                    <div class="form-group">
                        <h4>Datos generales del cliente</h4>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-2 col-md-2 col-xl-2">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">RFC</label>
                            <input asp-for="RFC" id="Rfc" name="Rfc" class="form-control" disabled />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Nombre completo</label>
                            <input asp-for="NombreCompleto" id="NombreCompleto" name="NombreCompleto" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3 col-xl-3">
                    <div class="form-group">
                        <div class=" mb-3">
                            <label class="control-label">Correo</label>
                            <input asp-for="Correo" id="Correo" name="Correo" class="form-control  " disabled />
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Nombre comercial</label>
                            <input asp-for="NombreComercial" id="NombreComercial" name="NombreComercial" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Razon social</label>
                            <input asp-for="RazonSocial" id="RazonSocial" name="RazonSocial" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Giro comercial</label>
                            <input asp-for="GiroComercio" id="GiroComercio" name="GiroComercio" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Telefono</label>
                            <input asp-for="Telefono" id="Telefono" name="Telefono" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-5 col-md-5 col-xl-5">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Dirección</label>
                            <input asp-for="Direccion" id="Direccion" name="Direccion" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3 col-xl-3">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Portal</label>
                            <input asp-for="Portal" id="Portal" name="Portal" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xl-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Cuenta</label>
                            <input asp-for="CuentaDeposito" id="CuentaDeposito" name="CuentaDeposito" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-5 col-md-5 col-xl-5">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Banco</label>
                            <input asp-for="Banco" id="Banco" name="Banco" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 col-md-3 col-xl-3">
                    <div class="form-group">
                        <div class="mb-3">
                            <label class="control-label">Tipo de deposito</label>
                            <input asp-for="IdTipoDeposito" id="IdTipoDeposito" name="IdTipoDeposito" class="form-control  " disabled />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table id="Documentos" class="table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id archivo</th>
                                <th>Documento</th>
                                <th>Descripcion</th>
                                <th>Descargar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <div class="mb-3">
                        <button class="btn btn-danger float-start" onclick="window.location.href='../MesaControl/Index'" style="width: 120px; border-radius: 0px; "><i class="bi bi-x-circle"></i> Cancelar</button>
                        <button class="btn btn-success float-end" onclick="window.location.href='../MesaControl/Aprobar'" style="width: 120px; border-radius: 0px; "><i class="bi bi-check-circle"></i> Aprobar</button>
                        <button class="btn btn-danger float-end" onclick="window.location.href='../MesaControl/Rechazar'" style="width: 120px; border-radius: 0px; "><i class="bi bi-x-circle"></i> Rechazar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

    <script type="text/javascript">


        let RFC;
        function datos(RFC) {
            RFC = RFC;
        }

        $.ajax({
            url: '/CargaDocumentos/Cargar/',
            type: 'POST',
            bFilter: false,

            success: function (json) {
                $('#Documentos').DataTable({
                    data: json.datad,
                    paging: false,
                    destroy: true,
                    searching: false,
                    columns: [
                        { data: 'idArchivo' },
                        { data: 'nombreDocumento' },
                        { data: 'descripcion' },
                        {
                            render: function (data, type, full, meta) {
                                return '<a href="/CargaDocumentos/DescargarDocumento?IdArchivo=' + full.idArchivo + '" class="btn btn-outline-secundary" style="width: 135px; border-radius: 0px; "><i class="bi bi-download"></i> Descargar</a>';
                            }
                        },
                        {
                            render: function (data, type, full, meta) {
                                return '<a href="/CargaDocumentos/EliminarDocumento?IdArchivo=' + full.idArchivo + '" class="btn btn-outline-secundary" style="width: 120px; border-radius: 0px; "><i class="bi bi-folder-x"></i> Eliminar</a>';
                            }
                        },

                    ],
                });
            }

        });
        $('#SubirDocumentos').click(function (event) {
            event.preventDefault();
            event.stopImmediatePropagation();


            $.ajax({
                url: '/CargaDocumentos/SubirDocumentos/',
                type: 'GET',
                data: { RFC: RFC },
                success: function (result) {
                    $('#offcanvasRightContrasena').html(result);
                    $('#createBody').modal('show');

                },
                error: function () {
                    alert("¡Hay un problema con el servicio, favor de reiniciar vista!")
                }
            });

        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

